package com.interviewprograms;

public class Largest_Num {
	public static void main(String[] args) {
		int a,b,c;
		a=40;
		b=20;
		c=30;

		if (a>b && a>c)
		{
			System.out.println(a);
		} 
		else if (b>a && b>c)
		{
			System.out.println(b);
		} 
		else if (c>a && c>b) 
		{
			System.out.println(c);
		}
		
	}

}
